<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".HeatingUsageActivity" >

    <TextView
        android:id="@+id/heating_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:keepScreenOn="true"
        android:paddingTop="50dp"
        android:textColor="@color/White"
        android:textSize="125sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/heating_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/heating_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/heating_location"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/heatings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heating_amount"
        android:baselineAligned="false"
        android:orientation="horizontal" >
    </LinearLayout>

</RelativeLayout>