<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:coverflow="http://schemas.android.com/apk/res/robindecroon.homeviz"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".HomeScreen" >

    <RelativeLayout
        android:id="@+id/homescreen_topbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <com.facebook.widget.ProfilePictureView
            android:id="@+id/profilePictureView1"
            android:layout_width="137dp"
            android:layout_height="131dp" >
        </com.facebook.widget.ProfilePictureView>

        <com.facebook.widget.LoginButton
            android:id="@+id/loginButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/homescreen_midbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <robindecroon.coverflow.CoverFlow
            android:id="@+id/coverflowReflect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            coverflow:imageReflectionRatio="0.2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/homescreen_bottombar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/keyword_usage"
            android:layout_width="0px"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:contentDescription="@string/usage_icon"
            android:gravity="center_horizontal"
            android:src="@drawable/usage" />

        <ImageView
            android:id="@+id/keyword_you"
            android:layout_width="0px"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:contentDescription="@string/you_icon"
            android:gravity="center_horizontal"
            android:src="@drawable/treemap" />

        <TextView
            android:id="@+id/keyword_hint"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/keyword_hint"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Red"
            android:textSize="100sp" />
    </LinearLayout>

</LinearLayout>