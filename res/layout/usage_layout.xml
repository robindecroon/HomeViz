<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical"
    tools:context=".UsageActivity" >

    <TextView
        android:id="@+id/usage_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:keepScreenOn="true"
        android:paddingTop="50dp"
        android:textColor="@color/Black"
        android:textSize="150sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/usage_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Black"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/usage_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/usage_location"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Black"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usage_amount"
        android:layout_marginTop="100dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/lightView"
                android:layout_width="300sp"
                android:layout_height="300sp"
                android:src="@drawable/light_icon" />

            <TextView
                android:id="@+id/usage_light_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="€30"
                android:textColor="@color/Black"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/waterView"
                android:layout_width="300sp"
                android:layout_height="300sp"
                android:src="@drawable/water_icon" />

            <TextView
                android:id="@+id/usage_water_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="€30"
                android:textColor="@color/Black"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/heatingView"
                android:layout_width="300sp"
                android:layout_height="300sp"
                android:src="@drawable/heating_icon" />

            <TextView
                android:id="@+id/usage_heating_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="€30"
                android:textColor="@color/Black"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/appliancesView"
                android:layout_width="300sp"
                android:layout_height="300sp"
                android:src="@drawable/appliances_icon" />

            <TextView
                android:id="@+id/usage_appliances_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="€30"
                android:textColor="@color/Black"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/tvView"
                android:layout_width="300sp"
                android:layout_height="300sp"
                android:src="@drawable/tv_icon" />

            <TextView
                android:id="@+id/usage_tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="€30"
                android:textColor="@color/Black"
                android:textSize="40sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>